<div class="container">
    <div class="responsive-row">
        <% @business.each do |business| %>
            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6 " style="height:100%;background-size:cover;padding:5px 5px;">
                <div style="width:100%;height:70%;background-image:url(<%= business.image_url %>);background-repeat:no-repeat;background-size:cover;overflow: hidden;"></div>
                <div class="container"  style="text-align: center; width:100%;height:30%;background-color:white;opacity: 0.8; border-color:#f0ad4e;border-style: groove;">
                    <a href="/businesses/<%= business.id%>" style="color:
                        black; text-decoration:none;">
                        <h6 class="text-uppercase text-center title responsive-text" style="margin:0px;font-family:Archivo Black;opacity:1;"><%= business.name %></h6>
                    </a>
                    <h5 class="rator responsive-text"><%= business.rating %></h5>
                    <% business.rating.times do |star| %>
                        <span class="fa fa-star checked"></span>
                    <% end %>
                    <% (5 - business.rating).times do |star| %>
                        <span class="fa fa-star"></span>
                    <% end %>
                    <p class="responsive-text" style="padding-top: 0px;"> <%= business.address %></p>
                </div>
            </div>
        <% end %>
    </div>
</div>
<div class="container" style="padding:90px 15px;">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-center">
            <div>
                <button class="btn btn-default btn-lg" type="button" style="font-family:&#39;Archivo Black&#39;, sans-serif;margin:auto;background-color:#f0ad4e;">&lt;&lt; Previous </button>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6 text-center">
            <div>
                <button class="btn btn-default btn-lg" type="button" style="font-family:&#39;Archivo Black&#39;, sans-serif;background-color:#f0ad4e;">Next &gt;&gt;</button>
            </div>
        </div>
    </div>
</div>


