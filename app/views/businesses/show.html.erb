<div class="container">
    <div class="img-responsive" style="background-image:url(<%= @business.image_url %>);height:500px;background-repeat:no-repeat;background-size:cover;background-position: center;"></div>
    <div style="padding-top:10px;">
        <div class="row" style="margin:0px;width:100%;height:30%;background-color:white;opacity: 0.8; border-color:#f0ad4e;border-style: groove;">
            <div class="col-lg-8 col-md-8" style="/*background-color:rgb(0,0,0);*/padding:5px 5px;">
                <h4><%= @business.name %></h4>
                <h5><%= @business.rating %> </h5><span>Star </span>
                <p><%= @business.address %>,<%= @business.city %> <%= @business.zip_code %> </p>
            </div>
            <div class="col-lg-4 col-md-4" style="/*background-color:blue;*/padding:5px 5px;">
                <button class="btn btn-default responsive-button" type="button">Write a Review  </button>
            </div>
        </div>
    </div>

    <% if @business.users.include? current_user %>
        <p>You have a reservation with <%= @business.name %> by <%= @reservation.start_time.strftime("%A %B %e, %Y %l:%M %p") %></p>
    <% else  %>
        <div style="padding-top:15px;padding-bottom:15px;text-align:center;">
            <button class="btn btn-default responsive-button" type="button"><%= link_to "Make a Reservation",new_business_reservation_path(@business), class: 'link-to-text-color' %></button>
        </div>
    <% end %>
</div>

